// Example 
#include<iostream>
using namespacse std;
class Program
{
    public : int b; //Local Variablr
    public : Program(const int a) //Contant Variablr inside Constaructor
    {
        b=a; //Passing Read only value to local variable 
    }
void Modify()
{
    cout<<"Value of b is "<<b;
    b=16;
    cout<<"Value of b is "<<b;
}    
};
int main() {
    Program obj(24);
    obj.Modify();
    return 0;
}
